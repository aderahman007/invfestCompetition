                       android:textStyle="bold"
                       android:layout_marginTop="20dp"
                       android:layout_marginRight="16dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginBottom="10dp"
                       android:text="Pahoman Klinik"/>
