<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgabu"
    tools:context=".ButuhMedisActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_map"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/maison_medium"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="Gedong Air, Bandar Lamp..."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maison_demi"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Pelayanan"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/all_rounded"
                    android:backgroundTint="@color/colorcard">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:drawableLeft="@drawable/ic_shield"
                        android:drawablePadding="16dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/maison_medium"
                        android:textColor="@color/black"
                        android:text="Medical Checkup"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_rightbutton"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/all_rounded"
                    android:backgroundTint="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_filter"
                        android:drawablePadding="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/maison_demi"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="false"
                        android:text="Filter"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/ic_sort"
                        android:drawablePadding="15dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/maison_demi"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="false"
                        android:text="Urutkan"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:orientation="horizontal"
                        android:background="@drawable/all_rounded"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:layout_marginBottom="16dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="16dp"
                            android:elevation="8dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/contohartikel"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/maison_demi"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="Medical Sentral"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/maison_book"
                                android:textSize="14sp"
                                android:layout_marginBottom="5dp"
                                android:text="Klinik"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_lokasi"
                                android:layout_marginBottom="5dp"
                                android:drawablePadding="16dp"
                                android:fontFamily="@font/maison_medium"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text="Gedong Air, Bandar Lamp..."/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:drawableLeft="@drawable/ic_height"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/maison_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:text="150 cm"/>
                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:drawableLeft="@drawable/ic_star"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/maison_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/star"
                                        android:text="4.5"/>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:orientation="horizontal"
                        android:background="@drawable/all_rounded"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:layout_marginBottom="16dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="16dp"
                            android:elevation="8dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/contohartikel"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/maison_demi"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="Medical Sentral"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/maison_book"
                                android:textSize="14sp"
                                android:layout_marginBottom="5dp"
                                android:text="Klinik"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_lokasi"
                                android:layout_marginBottom="5dp"
                                android:drawablePadding="16dp"
                                android:fontFamily="@font/maison_medium"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text="Gedong Air, Bandar Lamp..."/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:drawableLeft="@drawable/ic_height"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/maison_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:text="150 cm"/>
                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:drawableLeft="@drawable/ic_star"
                                        android:drawablePadding="10dp"
                                        android:fontFamily="@font/maison_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/star"
                                        android:text="4.5"/>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>