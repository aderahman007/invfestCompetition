<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgabu"
    tools:context=".AmbilKodeBookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/right_rounded"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="20dp">

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="500dp"
                android:elevation="20dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hana"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maison_demi"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:text="Pahoman Klinik"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maison_book"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:text="Klinik Umum"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_lokasi"
                        android:drawablePadding="10sp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:text="Sukabumi, Bandar Lampung"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--        Kontak Pasien-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/maison_medium"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:text="Kontak Pasien"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_book"
                    android:textColor="@color/black"
                    android:text="Harga Awal"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_book"
                    android:textColor="@color/black"
                    android:text="RP. 50.000"
                    android:layout_gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_book"
                    android:textColor="@color/black"
                    android:text="Voucher Diskon"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_book"
                    android:textColor="@color/black"
                    android:text="RP. 50.000"
                    android:layout_gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_medium"
                    android:textColor="@color/black"
                    android:text="Total Pembayaran"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_medium"
                    android:textColor="@color/black"
                    android:text="RP. 50.000"
                    android:layout_gravity="right"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/promosidiskon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/maison_medium"
                    android:textColor="@color/black"
                    android:text="Waktu Pelayanan"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_book"
                    android:text="Sel, 12 Agustus 2020"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/all_rounded"
                android:backgroundTint="@color/colorcard">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@drawable/ic_dompet"
                    android:drawablePadding="16dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_medium"
                    android:textColor="@color/black"
                    android:text="Dompet Smart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_medium"
                    android:text="RP. 39.000"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_rightbutton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_rounded"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/ic_tick"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_medium"
                    android:textColor="@color/white"
                    android:text="Dompet Smart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/maison_medium"
                    android:text="RP. 39.000"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/all_rounded"
                    android:backgroundTint="@color/bgabu">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/maison_medium"
                        android:text="Change"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/left_rounded"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/top_rounded"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/maison_demi"
                android:textSize="20sp"
                android:textColor="@color/textblack"
                android:layout_marginBottom="5dp"
                android:text="TOTAL HARGA"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/maison_demi"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"
                android:text="RP. 35.000"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Simpan dan Lanjutkan"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/top_rounded"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>